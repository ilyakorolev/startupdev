<div class="row">
    <div class="span3 offset2"><h2>Sign up</h2>


		<form class="form-horizontal">

	   	 <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		      <%= devise_error_messages! %>
	  
			<div class="control-group">
		  		<label class="control-label" for="email"><%= f.label :email %></label>
		      	<div class="controls">
					<%= f.email_field :email, :autofocus => true %>
				</div>
			</div>
     
			<div class="control-group">
		  		<label class="control-label" for="email"><%= f.label :password %></label>
		      	<div class="controls">
		    		<%= f.password_field :password %>
				</div>
			</div>
	
			<div class="control-group">
		  		<label class="control-label" for="email"><%= f.label :password_confirmation %></label>
		      	<div class="controls">
		    		<%= f.password_field :password_confirmation %>
				</div>
			</div>
		    <div class="controls">
		  		<%= f.submit "Sign up", class: "btn btn-success" %>
    		</div>
			<% end %>

		    <%= render "devise/shared/links" %>
		</div>
    </div>
</div>